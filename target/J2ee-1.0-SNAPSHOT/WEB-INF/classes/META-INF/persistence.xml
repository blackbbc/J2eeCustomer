        <class>entity.Userentity</class>
        <class>entity.VerifyEmailentity</class>
        <class>entity.Goodsentity</class>
        <class>entity.Applicationentity</class>
        <class>entity.Bookentity</class>
        <class>entity.BookGoodsentity</class>
